<table class="table">
  <tr>
    <th>用户</th>
    <th>消费种类</th>
    <th>时间</th>
    <th>上/下午</th>
    <th>付款人</th>
    <th></th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.id %></td>
      <td>
        <%= link_to book.title, book_path(book) %> 
        <% book.tags.each do |tag| %>
          <span class="badge"><%= tag.title %></span>
        <% end -%>
      </td>
      <td><%= book.user.username %></td>
      <td>
        <% if book.user == current_user %>
          <%= book.is_public ? "显示" : "不显示" %>

          <%= link_to "编辑", edit_book_path(book) %>
        <% end -%>
      </td>
    </tr>
  <% end -%>
</table>

<%= will_paginate @books %>